{
  "name": "@deepgram/deepdown-renderer",
  "version": "0.5.0",
  "description": "Renderer for Deepdown - generates markdown from templates",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:update-snapshots": "jest --updateSnapshot",
    "test:generate-snapshots": "jest --updateSnapshot",
    "lint": "eslint \"**/*.{js,ts,mjs}\"",
    "dev": "tsc -w"
  },
  "keywords": [
    "markdown",
    "renderer",
    "templates",
    "deepdown"
  ],
  "author": "Luke Oliff <luke@deepgram.com> (https://deepgram.com)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^12.0.1",
    "handlebars": "^4.7.8",
    "marked": "^9.1.5"
  },
  "devDependencies": {
    "@types/marked": "^5.0.2"
  }
}
